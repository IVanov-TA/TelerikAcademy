<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#D1F0FF">

     <ImageView
         android:id="@+id/pic_comments"
         android:layout_width="140dp"
         android:layout_height="90dp" />
     
    
    <ListView
        android:id="@+id/listViewComments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop ="140dp"
        android:layout_above="@+id/btn_newComment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>

	<Button
	    android:id="@+id/btn_newComment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:text="Add New Comment" />

	<TextView
	    android:id="@+id/txt_CommentMessage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/txt_CommentAuthor"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/pic_comments"
	    android:text="CommentMessage"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/txt_CommentDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/pic_comments"
	    android:layout_alignParentRight="true"
	    android:text="CommentDate"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

	<Button
	    android:id="@+id/btn_location"
	    android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/map"
	    android:layout_below="@+id/pic_comments"
	    android:text="See Touch Location?" />

	<TextView
	    android:id="@+id/txt_CommentAuthor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/txt_CommentDate"
	    android:layout_toRightOf="@+id/pic_comments"
	    android:text="CommentAuthor"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>